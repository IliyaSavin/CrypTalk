
{{> chatHeader}}
<div class="d-none" id="userId">{{id}}</div>
<section id="mainMessage">
    <div class="container text-center ">
        <div class="row allScreenContainer">
            <div class="mb-3 h-100 col-md-8 offset-md-2 col-lg-8 offset-lg-2 col-xl-8 offset-xl-2" id="messageBox">
                <div id="message-all" class="card border-0 m-0 p-0 position-relative bg-transparent">
                    {{#each messages}}
                        <div class="message-bottom p-0 m-0 position-relative">
                            <a class="message-body float-left"> {{this.message}} </a>
                        </div>
                        <div class="message-top p-0 m-0 position-relative">
                            <a class="message-owner float-left">{{this.name}}</a>
                            <div class="message-time float-right "> {{this.time}} </div>
                        </div>
                    {{/each}}
                </div>
            </div>
        </div>
        <form id="message-send-form" class="">
            <div class="input-group mb-3 p-0 col-sm-12 col-md-8 offset-md-2 col-lg-8 offset-lg-2 col-xl-8 offset-xl-2 align-self-end" id="message-send-box">
                <textarea name="" id="messageText" class="form-control" placeholder="Message"></textarea>
                <div class="input-group-append">
                    <button class="btn regButton" id="send-button">Send</button> 
                </div>
            </div>
        </form>
    </div>
</section>
