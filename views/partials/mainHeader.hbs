<!-- Owner first visit popup -->
{{#if firstVisit}}
  <div class="modal fade" id="ownerVisitModal" role="dialog" aria-labelledby="ownerVisitLabel">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="ownerVisitLabel">Your owner key</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body popup-input-padding">
          <div class="input-group mb-3">
            <input type="text" class="form-control" id="keyText" value="{{key}}">
            <div class="input-group-append">
              <button class="btn popup-button-color" id="copy-button">Copy</button> 
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn popup-button-color">I remembered</button>
        </div>
      </div>
    </div>
  </div>
 {{/if}}